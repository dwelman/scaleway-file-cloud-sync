# Scaleway Project Configuration
project_id = "your-project-id-here"
organization_id = "your-organization-id-here"
access_key = "your-access-key-here"
secret_key = "your-secret-key-here"

# Region and Zone
region = "fr-par"  # Options: fr-par, nl-ams, pl-waw
zone   = "fr-par-1"

# Bucket Configuration
bucket_name = "my-unique-bucket-name"

# Optional: Tags
tags = {
  Environment = "production"
  ManagedBy   = "terraform"
  Purpose     = "file-cloud-sync"
}

# Optional: Enable versioning
enable_versioning = false

# Optional: ACL (uncomment if needed)
# acl = "private"  # Options: private, public-read, public-read-write, authenticated-read

